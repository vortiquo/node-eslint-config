{
  "name": "@vortiquo/eslint-config",
  "version": "1.2.2-beta.3",
  "description": "Modern ESLint v9 flat configurations with TypeScript, React, Next.js, and Node.js support",
  "type": "module",
  "license": "MIT",
  "author": "Vortiquo <dev@vortiquo.com>",
  "homepage": "https://github.com/vortiquo/node-eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/vortiquo/node-eslint-config"
  },
  "scripts": {
    "lint": "ls-lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node scripts/validate-configs.js && node tests/test-configs.js",
    "test:configs": "node tests/test-configs.js",
    "prepack": "npm run test",
    "commit": "cz",
    "prepare": "husky"
  },
  "bugs": {
    "url": "https://github.com/vortiquo/node-eslint-config/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-flat-config",
    "eslint9",
    "typescript",
    "react",
    "nextjs",
    "nestjs",
    "nodejs",
    "prettier",
    "strict",
    "shared-config"
  ],
  "exports": {
    ".": "./index.js",
    "./base": "./base.js",
    "./base-typescript": "./base-typescript.js",
    "./react": "./react.js",
    "./react-library": "./react-library.js",
    "./react-library-js": "./react-library-js.js",
    "./nextjs": "./nextjs.js",
    "./server": "./server.js",
    "./nestjs": "./nestjs.js",
    "./node-library": "./node-library.js",
    "./node-library-js": "./node-library-js.js"
  },
  "files": [
    "index.js",
    "base.js",
    "base-typescript.js",
    "react.js",
    "react-library.js",
    "react-library-js.js",
    "nextjs.js",
    "server.js",
    "nestjs.js",
    "node-library.js",
    "node-library-js.js",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@eslint/js": "^9.17.0",
    "@next/eslint-plugin-next": "^16.1.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-turbo": "^2.3.3",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.18.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@ls-lint/ls-lint": "^2.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": "^5.0.0"
  }
}
